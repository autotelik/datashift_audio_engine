<div id="datashift-audio-track-playlist-wrapper-row" class="col-12">
  <div class="row">
    <div class="datashift-audio-playlist-content p-1 col-10 offset-1 w-100">
      <ul id="datashift-audio-playlist" class="datashift-audio-playlist p-1">
        <%= yield :datashift_audio_track_listing %>
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    // Add On click event handler to each item in Playlist
    $('#datashift-audio-playlist').children('li').on('click', function(){
        // TODO: audio_data.track should be renamed track_idx
        datashift_audio_engine.audio_data.track = parseInt(this.id.split('-')[1]);
        datashift_audio_engine.settings.autoplay = true;
        datashift_audio_engine.render_wave_from_audio_file(datashift_audio_engine.playlist[datashift_audio_engine.audio_data.track])
    });
</script>
