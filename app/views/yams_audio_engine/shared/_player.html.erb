<div class="row">
  <div id="yams-audio-player" class="yams-audio-player yams-audio-bar pt-2 col">

    <div id="yams-audio-player-wrapper-row" class="row">
      <div class="col-3">
        <div class="row">
          <div id="yams-audio-player-track_cover" class="col-5 text-center align-middle"><%= render partial: 'yams_audio_engine/shared/track_cover' %></div>
          <div id="yams-audio-player-track_basic_info" class="col-7 text-center align-middle"><%= render partial: 'yams_audio_engine/shared/track_basic_info' %></div>
        </div>
      </div>

      <div id="yams-audio-player-wave_block" class="col-6"><%= render partial: 'yams_audio_engine/shared/wave_block' %></div>

      <div id="yams-audio-player-controls" class="col-3">
        <%= render partial: 'yams_audio_engine/shared/track_volume' %>
      </div>
    </div>
  </div>
</div>

